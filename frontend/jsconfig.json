{
    "compilerOptions": {
        "moduleResolution": "bundler",
        "module": "ES2022",
        "target": "ES2022",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "allowSyntheticDefaultImports": true,
        "checkJs": true,
        "alwaysStrict": true,
        "noImplicitAny": false,
        "allowImportingTsExtensions": true,
        "allowArbitraryExtensions": true,
        "allowUmdGlobalAccess": true
    },
    "include": [
        "**/*.js"
    ],
    "exclude": [
        "node_modules",
        "**/dist/**",
        "**/build/**"
    ]
}